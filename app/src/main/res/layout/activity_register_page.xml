<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stefancouture.accountsmgr.presentation.registerPageActivity">

    <TextView android:id="@+id/register_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="45dp"
        android:labelFor="@+id/register_username"/>

    <EditText android:id="@+id/register_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_username_text"
        android:layout_alignBottom="@+id/register_username_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:inputType="text"
        android:textStyle="bold"/>

    <TextView android:id="@+id/register_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@+id/register_username_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/register_password"/>

    <EditText android:id="@+id/register_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_password_text"
        android:layout_alignBottom="@+id/register_password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <TextView android:id="@+id/register_reenter_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reenter_password"
        android:layout_below="@+id/register_password_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/register_reenter_password"/>

    <EditText android:id="@+id/register_reenter_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_reenter_password_text"
        android:layout_alignBottom="@+id/register_reenter_password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <TextView android:id="@+id/register_firstName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstName"
        android:layout_below="@+id/register_reenter_password_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/register_firstName"/>

    <EditText android:id="@+id/register_firstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_firstName_text"
        android:layout_alignBottom="@+id/register_firstName_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:inputType="textPersonName"
        android:textStyle="bold"/>

    <TextView android:id="@+id/register_lastName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastName"
        android:layout_below="@+id/register_firstName_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/register_lastName"/>

    <EditText
        android:id="@+id/register_lastName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_lastName_text"
        android:layout_alignBottom="@+id/register_lastName_text"
        android:layout_alignStart="@+id/register_firstName"
        android:layout_marginEnd="15dp"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView android:id="@+id/register_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@+id/register_lastName_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/register_email"/>

    <EditText android:id="@+id/register_email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/register_email_text"
        android:layout_alignBottom="@+id/register_email_text"
        android:layout_alignStart="@+id/register_lastName"
        android:layout_marginEnd="15dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_submitBtn"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/register_email_text"
        android:layout_marginStart="80dp"
        android:layout_marginTop="75dp"
        android:text="@string/submit"
        android:onClick="register"/>

    <Button
        android:id="@+id/register_cancelBtn"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/register_submitBtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@id/register_submitBtn"
        android:text="@string/cancel"
        android:onClick="cancel"/>

</RelativeLayout>
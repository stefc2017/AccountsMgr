<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stefancouture.accountsmgr.presentation.registerPageActivity">

    <TextView android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="45dp"
        android:labelFor="@+id/username"/>

    <EditText android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/username_text"
        android:layout_alignBottom="@+id/username_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:inputType="text"
        android:textStyle="bold"/>

    <TextView android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@+id/username_text"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/password"/>

    <EditText android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/password_text"
        android:layout_alignBottom="@+id/password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <TextView android:id="@+id/reenter_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reenter_password"
        android:layout_below="@+id/password_text"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/reenter_password"/>

    <EditText android:id="@+id/reenter_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/reenter_password_text"
        android:layout_alignBottom="@+id/reenter_password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <TextView android:id="@+id/firstName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstName"
        android:layout_below="@+id/reenter_password_text"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/firstName"/>

    <EditText android:id="@+id/firstName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/firstName_text"
        android:layout_alignBottom="@+id/firstName_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:inputType="textPersonName"
        android:textStyle="bold"/>

    <TextView android:id="@+id/lastName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastName"
        android:layout_below="@+id/firstName_text"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/lastName"/>

    <EditText
        android:id="@+id/lastName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/lastName_text"
        android:layout_alignBottom="@+id/lastName_text"
        android:layout_alignStart="@+id/firstName"
        android:layout_marginEnd="31dp"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@+id/lastName_text"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="50dp"
        android:labelFor="@+id/email"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/email_text"
        android:layout_alignBottom="@+id/email_text"
        android:layout_alignStart="@+id/lastName"
        android:layout_marginEnd="31dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_submitBtn"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_text"
        android:layout_marginStart="80dp"
        android:layout_marginTop="75dp"
        android:text="@string/submit"/>

    <Button
        android:id="@+id/register_cancelBtn"
        style="@android:style/Widget.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/register_submitBtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@id/register_submitBtn"
        android:text="@string/cancel"
        android:onClick="cancel"/>

</RelativeLayout>